+
+  G_OBJECT_CLASS (gis_eula_page_parent_class)->finalize (object);
+}
+
+static gboolean
+gis_eula_load_pdf (GisEulaPage *page, gchar *locale)
+{
+  // TODO MATT get dirname of GIS_EULA_DEFAULT_PAGE_PATH, add locale, check if file exists
+  // fallbacks to parent.
+  // TODO MATT: fallback to _
+
+  // Get the current locale and trim the charset if present
+  gchar *current_locale = setlocale(LC_ALL, NULL);
+  gchar *locale_trimmed = g_strdup(current_locale);
+  gchar *dot = strchr(locale_trimmed, '.');
+  if (dot != NULL) {
+      *dot = '\0';  // Remove the charset part
+  }
+
+  // Build the locale-specific EULA filename
+  gchar *locale_pdf_name = g_strdup_printf("EULA_%s.pdf", locale_trimmed);
+  // GIS_EULA_DEFAULT_PAGE_DIR.
+  // 1. you remove the suffix of GIS_EULA_DEFAULT_PAGE_PATH. (.pdf)
+  // this is eula_base_name
+  // (you strip after the _ of LANG)
+  // GFile *file
+  // for lang := range []{"en_US", "en", ""} {
+  //      uri = eula_base_name + lang + ".pdf"
+  /*
+          GFile *file = g_file_new_for_path(uri);
+          if (g_file_query_exists(file, NULL)) {
+            break
+          }
+      }
+      if file == NULL {
+            g_warning("No EULA file found");
+            // skip the page.
+      }
+  */
+  // }
+  gchar *locale_pdf_path = g_build_filename(GIS_EULA_DEFAULT_PAGE_DIR, locale_pdf_name, NULL);
+  g_free(locale_trimmed);
+  g_free(locale_pdf_name);
+
+  // Check if locale-specific EULA exists
+  gchar *uri;
+  if (g_file_test(locale_pdf_path, G_FILE_TEST_EXISTS)) {
+      uri = g_strdup(locale_pdf_path);
+  } else {
+      uri = g_build_filename(GIS_EULA_DEFAULT_PAGE_DIR, "EULA.pdf", NULL);
+  }
+
+  // Create a file object from URI
+  GFile *file = g_file_new_for_path(uri);
+  if (!g_file_query_exists(file, NULL)) {
+      g_warning("File does not exist: %s", uri);
+      g_object_unref(file);
+      g_free(locale_pdf_path);
+      g_free(uri);
+      return FALSE;
+  }
+
+  // Load the PDF document
+  GError *error = NULL;
+  page->document = poppler_document_new_from_gfile(file, NULL, NULL, &error);
+  if (!page->document) {
+      g_warning("Error opening PDF document %s: %s", uri, error->message);
+      g_error_free(error);
+      g_object_unref(file);
+      g_free(locale_pdf_path);
+      g_free(uri);
+      return FALSE;
+  }
+
+  // Get the total number of pages in the document
+  page->total_pages = poppler_document_get_n_pages(page->document);
+
+  g_object_unref(file);
+  g_free(locale_pdf_path);
+  g_free(uri);
+
+  return TRUE;
+}
+
+double pdf_get_total_height (GisEulaPage *page, double width, double *scale)
+{
+    double total_height = 0;
+    double page_width, page_height;
+
+    for (int i = 0; i < page->total_pages; i++)
+    {
+        PopplerPage *ppage = poppler_document_get_page (page->document, i);
+        poppler_page_get_size (ppage, &page_width, &page_height);
+
+        if (i == 0)
+        {
+            *scale = width / page_width;
+        }
+
+        total_height += page_height * (*scale);
+        g_object_unref (ppage);
+    }
+
+    return total_height;
+}
+
+void pdf_render_all_pages (GisEulaPage *page, cairo_t *cairo, double scale)
+{
+    double y_offset = 0;
+
+    for (int i = 0; i < page->total_pages; i++)
+    {
+        PopplerPage *ppage = poppler_document_get_page (page->document, i);
+        double page_width, page_height;
+        poppler_page_get_size (ppage, &page_width, &page_height);
+
+        cairo_save (cairo);
+        cairo_scale (cairo, scale, scale);
+        cairo_translate (cairo, 0, y_offset / scale);
+        poppler_page_render (ppage, cairo);
+        cairo_restore (cairo);
+
+        y_offset += page_height * scale;
+        g_object_unref (ppage);
+    }
+}
+
+static void pdf_view_draw_content(GtkDrawingArea *area, cairo_t *cairo, int width, int height, gpointer user_data)
+{
+  GisEulaPage *page = GIS_EULA_PAGE (user_data);
+  double scale;
+  double total_height = pdf_get_total_height (page, width, &scale);
+
+  gtk_widget_set_size_request (GTK_WIDGET(page->drawing_area), -1, total_height);
+  pdf_render_all_pages (page, cairo, scale);
+}
+
+static void
+gis_eula_page_locale_changed (GisPage *page)
+{
+  gis_page_set_title (GIS_PAGE(page), _("EULA"));
+  // TODO MATT: based on locale, call gis_eula_load_pdf
+  // + recall redraw?
+}
+
+static void
+gis_eula_page_class_init (GisEulaPageClass *klass)
+{
+  GisPageClass *page_class = GIS_PAGE_CLASS (klass);
+  GObjectClass *object_class = G_OBJECT_CLASS (klass);
+
+  gtk_widget_class_set_template_from_resource (GTK_WIDGET_CLASS (klass), "/org/gnome/initial-setup/gis-eula-page.ui");
+  gtk_widget_class_bind_template_child (GTK_WIDGET_CLASS (klass), GisEulaPage, drawing_area);
+
+  page_class->page_id = PAGE_ID;
+  page_class->locale_changed = gis_eula_page_locale_changed;
+
+  object_class->constructed = gis_eula_page_constructed;
+  object_class->finalize = gis_eula_page_finalize;
+}
+
+static void
+gis_eula_page_init (GisEulaPage *page)
+{
+    gis_page_set_needs_accept (GIS_PAGE(page), TRUE);
+
+    // Attempt to load the PDF; handle failure
+    if (!gis_eula_load_pdf(page, "C")) { 
+        GtkWidget *label = gtk_label_new(_("Failed to load the EULA document. Please check your installation or contact support."));
+        gtk_label_set_justify(GTK_LABEL(label), GTK_JUSTIFY_CENTER);
+        gtk_widget_show(label);
+
+        gtk_box_append(GTK_BOX(page), label);  // Add the label directly to the 'page'
+        
+        return;
+    }
+
+    // UI setup if PDF loaded successfully
+    gtk_widget_init_template(GTK_WIDGET(page));
+    gtk_drawing_area_set_draw_func(page->drawing_area, pdf_view_draw_content, page, NULL);
+    gis_add_style_from_resource("/org/gnome/initial-setup/gis-eula-page.css");
+}
+
+GisPage *
+gis_prepare_eula_page (GisDriver *driver)
+{
+  return g_object_new (GIS_TYPE_EULA_PAGE,
+                       "driver", driver,
+                       NULL);
+}
