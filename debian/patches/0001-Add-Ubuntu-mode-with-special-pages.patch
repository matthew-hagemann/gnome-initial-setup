+                              "response",
+                              G_CALLBACK (gtk_window_destroy),
+                              dialog);
+    gtk_widget_show (dialog);
+    return;
+  }
+
+  dialog = gtk_dialog_new_with_buttons (_("Ubuntu Report Contents"),
+                                        GTK_WINDOW (gtk_widget_get_root (GTK_WIDGET (page))),
+                                        GTK_DIALOG_MODAL |
+                                        GTK_DIALOG_DESTROY_WITH_PARENT |
