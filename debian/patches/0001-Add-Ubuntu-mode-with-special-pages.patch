+  flow_box = gtk_widget_get_last_child (stack);
+  for (child = flow_box ? gtk_widget_get_first_child (flow_box) : NULL;
+       child != NULL;
+       child = gtk_widget_get_next_sibling (child)) {
+        count++;
+  }
