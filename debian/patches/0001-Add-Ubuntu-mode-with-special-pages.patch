+  gtk_text_buffer_set_text (gtk_text_view_get_buffer (GTK_TEXT_VIEW (text_view)), priv->report, -1);
+  gtk_scrolled_window_set_child (GTK_SCROLLED_WINDOW (scroll), text_view);
