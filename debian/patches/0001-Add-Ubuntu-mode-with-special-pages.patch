+    } else {
+      if (attach_priv->active_radio == MAGIC) {
+        ua_attach(attach_priv->contract_token, attach_priv);
+      } else {
+        request_token_attach(NULL, attach_page);
+      }
+      gis_page_apply_complete (GIS_PAGE (page), FALSE);
+      return FALSE;
+    }
+    priv->current_page = SERVICES_PAGE;
+    break;
+  case SERVICES_PAGE:
